<main>
    <div class="container">
        <h1>Volunteer Dashboard</h1>
        <!-- volunteer info -->
        <div class="row" id="volunteer-info">
            <h2>Your Information</h2>
            <div>
                <h4>Name: <span class="volunteer_name">{{volunteer.volunteer_first_name}} {{volunteer.volunteer_last_name}}</span></h4>
                <p>Location: <span class="volunteer_preferred_city">{{volunteer.preferred_city}}</span></p>
                <p>Email: <span class="volunteer_email">{{volunteer.email}}</span></p>
                <p>Bio: <span class="volunteer_bio">{{volunteer.bio}}</span></p>
            </div>
        </div>
        <!-- new listing form -->     
        <div class="row" id='new-listing'>
            <h2>Add a New Listing.</h2>
            <p>Edu-care connects schools with volunteers. Please tell us more about yourself.</p>
            <form class="col s12" id="new-listing-form">
                <!-- Category -->
                <div class="row">
                    <div class="input-field col s6">
                        <select id="category" required>
                            <option value="" disabled selected>Volunteer Category</option>
                            <option value="panelist">Panelist</option>
                            <option value="lecturer">Lecturer</option>
                            <option value="judge">Competition Judge</option>
                            <option value="career">Career Guidance</option>
                            <option value="shadowing">Job Shadowing</option>
                            <option value="general">General Volunteering</option>
                        </select>
                        <label>Volunteer Category</label>
                    </div>
                    <!-- Specialty -->
                    <div class="input-field col s6">
                        <input placeholder="e.g. Computer Science" id="specialty" type="text" class="validate" required>
                        <label for="specialty">Your Specialty</label>
                    </div>
                </div>
                <!-- Submit button -->
                <button class="btn waves-effect waves-light red accent-2" type="submit" id="listing-form-submit">Submit
                    <i class="material-icons right">send</i>
                </button>
            </form>
        </div>   
        
        <!-- volunteer listings -->
        <div class="row" id="volunteer-listings">
            <h2>Your Listings.</h2>
            <p>This is what you shared.</p>
            <ul class="collection">
                {{#each listings}}
                <li class="collection-item">
                    <div>
                        <h4>Name: <span class="volunteer_name">{{this.Volunteer.volunteer_first_name}} {{this.Volunteer.volunteer_last_name}}</span></h4>
                        <p>Location: <span class="volunteer_location">{{this.Volunteer.preferred_city}}</span></p>
                        <p>Category: <span class="volunteer_category">{{this.category}}</span></p>
                        <p>Specialty: <span class="volunteer_specialty">{{this.specialty}}</span></p>
                        <p>Bio: <span class="volunteer_bio">{{this.Volunteer.bio}}</span></p>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</main>
